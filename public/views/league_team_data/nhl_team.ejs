
<!--Table for the Centers-->
<table>
    <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Jersey No.</th>
    </tr>

    <% data.athletes[0].items.forEach(center => { %>
        <tr>
            <% if (center.headshot !== undefined){ %>
                <td><img class="headshot" src="<%= center.headshot.href %>"></td>
            <% } else { %>
                <td><img class="headshot" src="/images/default_headshot.png"></td>
            <% } %>
            <td><%= center.displayName %></td>
            <td><%= center.jersey %></td>
        </tr>
    <% }) %>
</table>

