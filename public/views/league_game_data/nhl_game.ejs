                        <th>A</th>
                        <th>P</th>
                        <th>+/-</th>
                        <th>SOG</th>
                        <th>BS</th>
                        <th>FO%</th>
                        <th>PIM</th>
                        <th>H</th>
                        <th>TK</th>
                        <th>GV</th>
                    </tr>

